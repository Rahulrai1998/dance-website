    include ../static/style.css
    include ../static/styleContact.css  

block content
  div.container
    h1 Contact us
    form(action="/contact" method="post" class="myForm")
        input(type="text" placeholder="Enter your name" name="name" , class="myInput")
        input(type="phone" placeholder="Enter your phone" name="phone" , class="myInput")
        input(type="email" placeholder="Enter your email" name="email" , class="myInput")
        input(type="text" placeholder="Enter your address" name="address" , class="myInput")
        input(type="text" placeholder="Enter your concern" name="desc" , class="myInput")
